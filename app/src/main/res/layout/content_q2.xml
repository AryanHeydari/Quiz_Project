<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_q2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.aryanheydari.quiz.Q2"
    tools:showIn="@layout/app_bar_q2">

    <Button
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/CheatQ2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/BackQ2"
        android:onClick="BackQ2" />

    <Button
        android:text="Cheat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CheatQ2"
        android:layout_alignBaseline="@+id/NextQ2"
        android:layout_alignBottom="@+id/NextQ2"
        android:layout_centerHorizontal="true"
        android:onClick="CheatQ2" />

    <RadioButton
        android:text="1826"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/AQ2"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp" />

    <RadioButton
        android:text="1866"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CQ2"
        android:textSize="18sp"
        android:layout_below="@+id/AQ2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioButton
        android:text="1910"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BQ2"
        android:textSize="18sp"
        android:layout_alignBaseline="@+id/AQ2"
        android:layout_alignBottom="@+id/AQ2"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <RadioButton
        android:text="1926"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DQ1"
        android:textSize="18sp"
        android:layout_below="@+id/BQ2"
        android:layout_alignLeft="@+id/BQ2"
        android:layout_alignStart="@+id/BQ2" />

    <TextView
        android:text="Your Answer:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/AnswerQ2"
        android:textSize="18sp"
        android:layout_below="@+id/CQ2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="When was UCL found?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Score: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Score"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:text="Question 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/Score"
        android:layout_alignBottom="@+id/Score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NextQ2"
        android:onClick="NextQ2"
        android:layout_below="@+id/AnswerQ2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>
